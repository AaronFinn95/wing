{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "affected": {
    "defaultBase": "main"
  },
  "npmScope": "monadahq",
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "libs"
  },
  "plugins": [
    "@nxrs/cargo"
  ],
  "namedInputs": {
    "src": [
      "{projectRoot}/src/**/*"
    ],
    "project-files": [
      "{projectRoot}/*"
    ],
    "workspace-files": [
      "{workspaceRoot}/*"
    ],
    "test": [
      "{projectRoot}/test/**/*"
    ],
    "rust-conf": [
      "{projectRoot}/Cargo.toml",
      "{workspaceRoot}/Cargo.toml",
      "{workspaceRoot}/Cargo.lock"
    ],
    "projen": [
      "{projectRoot}/.projenrc.ts",
      "{projectRoot}/.projenrc.js",
      "{projectRoot}/.projen/*"
    ],
    "wingc-wasm": [
      "{workspaceRoot}/target/wasm32-wasi/debug/wingc.wasm",
      "{workspaceRoot}/target/wasm32-wasi/release/wingc.wasm"
    ],
    "wingc-native": [
      "{workspaceRoot}/target/debug/wingc",
      "{workspaceRoot}/target/release/wingc"
    ],
    "wing-language-server-wasm": [
      "{workspaceRoot}/target/wasm32-wasi/debug/wing-language-server.wasm",
      "{workspaceRoot}/target/wasm32-wasi/release/wing-language-server.wasm"
    ],
    "wing-language-server-native": [
      "{workspaceRoot}/target/debug/wing-language-server",
      "{workspaceRoot}/target/release/wing-language-server"
    ],
    "dist": [
      "{projectRoot}/dist/**/*"
    ]
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "captureStderr": true,
        "cacheableOperations": [
          "build",
          "build-native",
          "build-wasm",
          "copy",
          "lint",
          "test"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "inputs": [
        "project-files",
        "workspace-files",
        "src"
      ],
      "outputs": [
        "{workspaceRoot}/dist"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "build-native": {
      "inputs": [
        "project-files",
        "workspace-files",
        "src"
      ],
      "dependsOn": [
        "^build-native"
      ]
    },
    "build-wasm": {
      "inputs": [
        "project-files",
        "workspace-files",
        "src"
      ],
      "dependsOn": [
        "^build-wasm"
      ]
    },
    "test": {
      "inputs": [
        "project-files",
        "workspace-files",
        "src",
        "test"
      ]
    }
  }
}
